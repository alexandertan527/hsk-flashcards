<div id="flashcard" class="flashcard card d-flex justify-content-center align-items-center mb-3" data-action="click->reveal-card#show" data-reveal-card-target="newCard">
  <div class="card-inner">

    <div class="card-face card-face-front">
      <h2 data-reveal-card-target="revealCard"><%= card.character %></h2>
    </div>

    <div class="card-face card-face-back">
      <div class="d-flex flex-column justify-content-center align-items-center d-none" data-reveal-card-target="translation">
        <h3><%= card.character %></h3>
        <h4><%= card.pinyin %></h4>
        <h4><%= card.translation %></h4>
      </div>
    </div>

  </div>
</div>
