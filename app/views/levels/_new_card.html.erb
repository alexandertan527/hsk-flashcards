<div id="flashcard" class="flashcard card d-flex justify-content-center align-items-center mb-3" data-action="click->reveal-card#show">
  <div class="card-inner" data-reveal-card-target="card">

    <div class="card-face card-face-front d-flex justify-content-center align-items-center">
      <h2><%= card.character %></h2>
    </div>

    <div class="card-face card-face-back">
      <div class="card-content d-flex flex-column justify-content-center align-items-center">
        <h4><%= card.pinyin.capitalize %></h4>
        <h4><%= card.translation.capitalize %></h4>
      </div>
    </div>

  </div>
</div>
